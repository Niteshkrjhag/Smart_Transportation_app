                />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="90dp"
                android:src="@drawable/green_seat"
                android:contentDescription="Seat"
                android:scaleType="fitXY"
                android:onClick="seatClicked"
                android:tag="green"
                />
